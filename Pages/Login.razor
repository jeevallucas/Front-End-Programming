@page "/"
@using Model
@using System.ComponentModel.DataAnnotations

<style>
    /* CSS untuk mempercantik tampilan form login */
    .form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f5f5f5;
    }

    .form h1 {
        text-align: center;
    }

    .form label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form input[type="text"],
    .form input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    /* CSS untuk tautan Daftar */
    .register-link {
        text-align: center;
        margin-top: 10px;
    }
</style>

<PageTitle>Login</PageTitle>

<h1>Login</h1>

<div class="register-link">
    <p>Belum punya akun? <a href="/register">Daftar</a></p>
</div>

<EditForm Model="@loginModel" OnValidSubmit="LoginUser">
    <DataAnnotationsValidator />
    <div class="form">
        <label for="username">Username</label>
        <input id="username" type="text" @bind-value="loginModel.Username" />
        <ValidationMessage For="@(() => loginModel.Username)" />

        <label for="password">Password</label>
        <input id="password" type="password" @bind-value="loginModel.Password" />
        <ValidationMessage For="@(() => loginModel.Password)" />

        <button class="btn btn-primary" type="submit">Login</button>
    </div>
</EditForm>

@code {
    private Model.LoginModel loginModel = new LoginModel
        {
            Username = "",
            Password = ""
        };

    private void LoginUser()
    {
        // Logika login
        if (loginModel.Username == "username" && loginModel.Password == "password")
        {
            Console.WriteLine("Login berhasil!");
        }
        else
        {
            Console.WriteLine("Login gagal. Silakan periksa kredensial Anda");
        }
    }
}
