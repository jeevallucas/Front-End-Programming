@page "/register"
<style>
    /* CSS untuk mempercantik tampilan form */
    .form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f5f5f5;
    }

    .form h1 {
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        font-weight: bold;
    }

    .form-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    /* CSS untuk tautan Register */
    .register-link {
        text-align: center;
        margin-top: 10px;
    }
</style>

<PageTitle>Register</PageTitle>

<h1>Register</h1>

<div class="register-link">
    <p>Sudah memiliki akun? <a href="/">Login</a></p>
</div>

<form class="form" @onsubmit="RegisterUser">
    <div class="form-group">
        <label for="username">Nama Pengguna:</label>
        <input id="username" type="text" @bind="username" />
    </div>

    <div class="form-group">
        <label for="password">Kata Sandi:</label>
        <input id="password" type="password" @bind="password" />
    </div>

    <div class="form-group">
        <label for="name">Nama:</label>
        <input id="name" type="text" @bind="name" />
    </div>

    <div class="form-group">
        <label for="address">Alamat:</label>
        <input id="address" type="text" @bind="address" />
    </div>

    <div class="form-group">
        <label for="phone">Nomor Telepon:</label>
        <input id="phone" type="text" @bind="phone" />
    </div>

    <button class="btn btn-primary" type="submit">Register</button>
</form>

@code {
    private string username;
    private string password;
    private string name;
    private string address;
    private string phone;

    private void RegisterUser()
    {
        // logika registrasi
    }
}
